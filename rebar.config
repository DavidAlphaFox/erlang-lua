{ erl_opts, [
    {src_dirs, ["src"]},
    warnings_as_errors,
    debug_info
]}.

{ cover_enabled, true}.

{ port_specs,[
    {"priv/lua_enode", ["c_src/lua_enode.c"]}
]}.

{ port_env,[
    {"LUA", "../erlang-lua-java/lua5.1"},
    {"CFLAGS", "$CFLAGS  -D_REENTRANT=PTHREADS -I$LUA/include"},
    {"LDFLAGS", "$LDFLAGS -L$LUA/lib -llua -lm -ldl"},
    {"linux", "LDFLAGS", "$LDFLAGS -lpthread"}
]}.
